<p id="notice"><%= notice %></p>

<div class="panel panel-default">
<div class="panel-body">
  <h1>CoinBay</h1>
  <br/>
  <form class="form-inline">
    <div for="search" class="form-group">
      <input  type="text" placeholder= "Yarr! What ye be lookin' fer?" name="search"  class="form-control">
      <input type="submit" value="Search" class="btn btn-primary">
      <%= link_to "Clear Filter", "items#index", class: "btn btn-primary"%>
    </div>

  </form>
</div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Price</th>
      <th>Shipping</th>
      <th>Quantity</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.category.name %></td>
        <td><%= item.price %></td>
        <td><%= item.shipping.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.user.id %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
